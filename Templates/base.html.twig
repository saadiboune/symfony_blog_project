<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Accueil</a>
    <a class="navbar-brand" href="/">Posts</a>
    <div class="collapse navbar-collapse " id="collapsibleNavbar">
        <ul class="navbar-nav ml-auto ">
            <li class="nav-item">
                <a class="dropdown-item" {% if is_granted('IS_AUTHENTICATED_FULLY') %} href="{{ path('app_post_create' ) }}"
                        {% endif %}>Créer un post</a>
            </li>
            <li class="nav-item">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="dropdown-item" href="{{ path('security_logout' ) }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('security_login') }}" class="dropdown-item">Connexion</a>
                {% endif %}
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}{% endblock %}

{# Bloc pour afficher les messages #}
{% if app.session.flashbag.peekAll is not empty %}
    <div class="flash container mt-2" id="flash">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    <span class="font-weight-bold">{{ message }}</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}

{% block content %}{% endblock %}

{# Footer #}
<footer class="footer mt-5">
    <div class="footer-lower bg-white">
        <div class="container d-flex justify-content-between align-items-center border-top">
            <span class="p-4 text-secondary">Copyright © 2020 Lina AOUGBI Saadi DIBOUNE</span>
        </div>
    </div>
    {# {% block footer %}{% endblock %} #}
</footer>
</body>
</html>
